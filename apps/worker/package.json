    "discord-api-types": "^0.38.38",
    "drizzle-orm": "^0.45.1",
    "ioredis": "^5.9.2",
    "nats": "^2.28.2",
    "opossum": "^8.1.4",
    "pino": "^9.5.0",
    "postgres": "^3.4.4",
    "prom-client": "^15.1.0",
    "rate-limiter-flexible": "^9.1.1",
    "viem": "^2.45.2",
    "zod": "^3.23.8"
