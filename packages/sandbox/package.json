{
  "name": "@arrakis/sandbox",
  "version": "0.1.0",
  "description": "Discord Server Sandboxes - Isolated testing environments for Arrakis",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schema": {
      "import": "./dist/schema.js",
      "types": "./dist/schema.d.ts"
    },
    "./types": {
      "import": "./dist/types.js",
      "types": "./dist/types.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@arrakis/core": "file:../core",
    "drizzle-orm": "^0.33.0",
    "nanoid": "^5.0.0",
    "postgres": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ioredis": "^5.4.0",
    "nats": "^2.28.0",
    "pino": "^9.0.0",
    "prom-client": "^15.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "ioredis": ">=5.0.0",
    "nats": ">=2.0.0",
    "pino": ">=8.0.0",
    "prom-client": ">=15.0.0"
  },
  "peerDependenciesMeta": {
    "ioredis": {
      "optional": true
    },
    "nats": {
      "optional": true
    },
    "prom-client": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "UNLICENSED"
}
