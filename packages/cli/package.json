  "devDependencies": {
    "@types/ms": "^2.1.0",
    "@types/node": "^20.0.0",
    "pino": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "pino": ">=8.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
