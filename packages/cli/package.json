{
  "name": "@arrakis/cli",
  "version": "0.1.0",
  "description": "Arrakis Developer CLI - bd command",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bd": "./dist/bin/bd.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
