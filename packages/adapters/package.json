{
  "name": "@arrakis/adapters",
  "version": "0.1.0",
  "description": "Adapter implementations for Arrakis core ports",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./chain": {
      "import": "./dist/chain/index.js",
      "types": "./dist/chain/index.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/index.js",
      "types": "./dist/storage/index.d.ts"
    },
    "./themes": {
      "import": "./dist/themes/index.js",
      "types": "./dist/themes/index.d.ts"
    },
    "./wizard": {
      "import": "./dist/wizard/index.js",
      "types": "./dist/wizard/index.d.ts"
    },
    "./synthesis": {
      "import": "./dist/synthesis/index.js",
      "types": "./dist/synthesis/index.d.ts"
    },
    "./security": {
      "import": "./dist/security/index.js",
      "types": "./dist/security/index.d.ts"
    },
    "./coexistence": {
      "import": "./dist/coexistence/index.js",
      "types": "./dist/coexistence/index.d.ts"
    },
    "./agent": {
      "import": "./dist/agent/index.js",
      "types": "./dist/agent/index.d.ts"
    },
    "./agent/config": {
      "import": "./dist/agent/config.js",
      "types": "./dist/agent/config.d.ts"
    },
    "./agent/agent-auth-middleware": {
      "import": "./dist/agent/agent-auth-middleware.js",
      "types": "./dist/agent/agent-auth-middleware.d.ts"
    },
    "./agent/budget-manager": {
      "import": "./dist/agent/budget-manager.js",
      "types": "./dist/agent/budget-manager.d.ts"
    },
    "./agent/idempotency": {
      "import": "./dist/agent/idempotency.js",
      "types": "./dist/agent/idempotency.d.ts"
    },
    "./agent/req-hash": {
      "import": "./dist/agent/req-hash.js",
      "types": "./dist/agent/req-hash.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@arrakis/core": "file:../core",
    "drizzle-orm": "^0.33.0",
    "ioredis": "^5.9.2",
    "jose": "^5.10.0",
    "opossum": "^8.1.0",
    "postgres": "^3.4.0",
    "uuid": "^11.1.0",
    "viem": "^2.21.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "@types/opossum": "^8.1.7",
    "@types/uuid": "^10.0.0",
    "fast-check": "^4.5.3",
    "pino": "^9.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "pino": ">=8.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "UNLICENSED"
}
