{
  "name": "sietch-service",
  "version": "6.0.0",
  "description": "Token-gated Discord community service for top BGT holders",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.production.json",
    "build:strict": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "trigger:dev": "trigger dev",
    "trigger:deploy": "trigger deploy",
    "seed:stories": "tsx scripts/seed-stories.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "migrate:sqlite": "tsx scripts/migrate-sqlite-to-postgres.ts",
    "migrate:rollback": "tsx scripts/rollback-migration.ts",
    "bench:ci": "npx tsx tests/bench/jwt-benchmark.ts --ci && npx tsx tests/bench/gateway-overhead-benchmark.ts --ci",
    "bench:staging": "npx tsx tests/bench/jwt-benchmark.ts --staging && npx tsx tests/bench/gateway-overhead-benchmark.ts --staging",
    "dist:verify": "npx tsx tests/bench/dist-verify.ts"
  },
  "keywords": [
    "berachain",
    "bgt",
    "discord",
    "token-gating"
  ],
  "author": "0xHoneyJar",
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@arrakis/adapters": "file:../../packages/adapters",
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@aws-sdk/client-s3": "^3.966.0",
    "@open-policy-agent/opa-wasm": "^1.9.2",
    "@paddle/paddle-node-sdk": "^1.6.0",
    "@trigger.dev/sdk": "^3.0.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/ioredis": "^5.0.0",
    "@types/ws": "^8.18.1",
    "argon2": "^0.44.0",
    "axios": "^1.7.9",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^11.6.0",
    "bullmq": "^5.66.4",
    "cookie-parser": "^1.4.7",
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "fast-check": "^4.5.3",
    "file-type": "^19.6.0",
    "grammy": "^1.39.2",
    "helmet": "^8.1.0",
    "ioredis": "^5.9.1",
    "node-vault": "^0.10.9",
    "opossum": "^9.0.0",
    "pg": "^8.16.3",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "postgres": "^3.4.8",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "sharp": "^0.34.5",
    "swagger-ui-express": "^5.0.1",
    "viem": "^2.44.1",
    "ws": "^8.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/argon2": "^0.14.1",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/express": "^5.0.0",
    "@types/node": "^22.19.5",
    "@types/node-vault": "^0.9.13",
    "@types/opossum": "^8.1.9",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.14.0",
    "@vitest/coverage-v8": "^2.1.9",
    "drizzle-kit": "^0.31.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "supertest": "^7.2.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
