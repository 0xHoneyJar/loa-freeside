    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "grammy": "^1.38.4",
    "ioredis": "^5.8.2",
    "node-vault": "^0.10.9",
    "opossum": "^9.0.0",
    "pg": "^8.16.3",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "postgres": "^3.4.7",
    "sharp": "^0.33.5",
    "stripe": "^17.4.0",
    "viem": "^2.21.54",
    "zod": "^3.23.8"
